<?xml version="1.0" encoding="utf-8"?><!--卡片式布局-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">


        <TextView
            android:id="@+id/dish_comment_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"/>


        <TextView
            android:id="@+id/dish_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/dish_comment_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dish_comment_user"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/dish_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dish_comment_rating"
            android:textSize="23sp"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>
